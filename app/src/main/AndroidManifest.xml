<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edwinacubillos.sesionfragments">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SuperheroeDetalleActivity"
            android:label="@string/title_activity_superheroe_detalle"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".bottom_navigation.BottomActivity"></activity>
        <activity
            android:name=".tabbed_navigation.TabActivity"
            android:label="@string/title_activity_tab"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".drawer_navigation.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".bottom_navigation.BottomActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".dinamico_fragment.DinamicoActivity" />
        <activity android:name=".static_fragments.MainActivity" />
    </application>

</manifest>